#include <cmath>
#include <cstdio>
#include <vector>
#include <iostream>
#include <algorithm>
#include<bits/stdc++.h>
using namespace std;


int main() {
    /* Enter your code here. Read input from STDIN. Print output to STDOUT */   
    int n,num;
    cin>>n;
    vector<int>arr;
    for(int i=0;i<n;i++)
    {
        cin>>num;
        arr.push_back(num);
    }
    vector<int>dp(n+1,0);
    dp[n-1]=0;
    for(int i=n-2;i>=0;i--)
    {
        int min1=100000;
        while(arr[i]>0)
        {
            min1=min(1+dp[arr[i]+i],min1);
            arr[i]--;
        }
        dp[i]=min1;
        //cout<<i<<" "<<dp[i]<<endl;
    }
    cout<<dp[0];
    return 0;
}
